<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CampaignFragment">

    <RelativeLayout
        android:id="@+id/campaign_tab"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@mipmap/monet_logo_top"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/img_searchMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_search_gray_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_marginTop="55dp"/>

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/edt_new_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/dob_box"
            android:minHeight="40dp"
            android:hint="Search"
            android:longClickable="false"
            android:textSize="12dp"
            android:theme="@style/myEditTextLogin"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:layout_below="@id/edt_new_search"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_data"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:gravity="center"/>

</RelativeLayout>